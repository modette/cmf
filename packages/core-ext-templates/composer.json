{
  "name": "modette/core-ext-templates",
  "description": "Latte templates for Modette",
  "type": "library",
  "license": "MPL-2.0",
  "keywords": [
    "assets",
    "latte",
    "templates",
    "themes",
    "translations"
  ],
  "homepage": "https://github.com/modette/modette",
  "authors": [
    {
      "name": "Marek BartoÅ¡",
      "homepage": "https://marek-bartos.cz"
    }
  ],
  "require": {
    "php": ">=7.2.0",
    "contributte/application": "^0.3.1",
    "contributte/event-dispatcher-extra": "^0.4.1",
    "latte/latte": "~2.4.8",
    "modette/core": "^1.0.0"
  },
  "require-dev": {
    "ninjify/nunjuck": "^0.2.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Modette\\Templates\\": "src",
      "Modette\\Assets\\": "src/Assets",
      "Modette\\Themes\\": "src/Themes"
    }
  },
  "scripts": {
    "tests": [
      "tester -s -p php --colors 1 -C tests/cases"
    ],
    "phpstan-install": [
      "mkdir -p temp/phpstan",
      "composer require -d temp/phpstan phpstan/phpstan:^0.10",
      "composer require -d temp/phpstan phpstan/phpstan-deprecation-rules:^0.10",
      "composer require -d temp/phpstan phpstan/phpstan-nette:^0.10",
      "composer require -d temp/phpstan phpstan/phpstan-strict-rules:^0.10"
    ],
    "phpstan": [
      "temp/phpstan/vendor/bin/phpstan analyse -l max -c phpstan.neon src"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  }
}
