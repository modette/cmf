{
  "name": "modette/module-installer",
  "description": "Module installer for Modette",
  "type": "composer-plugin",
  "license": "MPL-2.0",
  "keywords": [
    "composer",
    "extension",
    "installer",
    "module"
  ],
  "homepage": "https://github.com/modette/modette",
  "authors": [
    {
      "name": "Marek BartoÅ¡",
      "homepage": "https://marek-bartos.cz"
    }
  ],
  "require": {
    "php": ">=7.2.0",
    "composer-plugin-api": "^1.0.0"
  },
  "require-dev": {
    "composer/composer": "^1.7.0",
    "ninjify/nunjuck": "^0.2.1"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Modette\\ModuleInstaller\\": "src"
    }
  },
  "scripts": {
    "tests": [
      "tester -s -p php --colors 1 -C tests/cases"
    ],
    "phpstan-install": [
      "mkdir -p temp/phpstan",
      "composer require -d temp/phpstan phpstan/phpstan:^0.10",
      "composer require -d temp/phpstan phpstan/phpstan-deprecation-rules:^0.10",
      "composer require -d temp/phpstan phpstan/phpstan-nette:^0.10",
      "composer require -d temp/phpstan phpstan/phpstan-strict-rules:^0.10"
    ],
    "phpstan": [
      "temp/phpstan/vendor/bin/phpstan analyse -l max -c phpstan.neon src"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "class": "Modette\\ModuleInstaller\\Plugin",
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  }
}
